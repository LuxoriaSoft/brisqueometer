<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brisqueometer</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#4a90e2',
                        secondary: '#5c6bc0',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gradient-to-br from-purple-600 via-purple-500 to-indigo-600 min-h-screen">
    <header>
        <nav class="bg-white shadow-lg">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex items-center">
                        <a class="text-2xl font-bold text-primary hover:scale-105 transition-transform" asp-area="" asp-controller="Home" asp-action="Index">
                            ðŸ“¸ Brisqueometer
                        </a>
                    </div>
                    <div class="flex items-center">
                        <a class="text-gray-700 hover:text-primary px-3 py-2 rounded-md font-medium transition-colors" asp-area="" asp-controller="Home" asp-action="Index">
                            Home
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white shadow-lg mt-auto">
        <div class="max-w-7xl mx-auto px-4 py-4 text-center text-gray-600">
            &copy; 2026 - Brisqueometer - Image Quality Assessment
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
