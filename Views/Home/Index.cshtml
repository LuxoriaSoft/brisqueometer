@model ImageUploadViewModel
@{
    ViewData["Title"] = "Image Quality Assessment";
}

<div class="text-center">
    <h1 class="display-4">Brisqueometer</h1>
    <p class="lead">Upload an image to assess its quality using the BRISQUE algorithm</p>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body">
                <h5 class="card-title">Upload Image</h5>
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" role="alert">
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <form asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="imageFile" class="form-label">Select Image File</label>
                        <input type="file" 
                               class="form-control" 
                               id="imageFile" 
                               name="ImageFile" 
                               accept=".jpg,.jpeg,.png,.bmp"
                               required>
                        <div class="form-text">Supported formats: JPG, JPEG, PNG, BMP (Max 10MB)</div>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Analyze Image Quality</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-4">
            <h5>About BRISQUE</h5>
            <p class="text-muted small">
                BRISQUE (Blind/Referenceless Image Spatial Quality Evaluator) is a no-reference 
                image quality assessment algorithm. It analyzes images without needing a reference 
                image and provides a quality score. Lower scores indicate better image quality.
            </p>
        </div>
    </div>
</div>
