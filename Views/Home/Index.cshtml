@model ImageUploadViewModel
@{
    ViewData["Title"] = "Image Quality Assessment";
}

<div class="text-center mb-12">
    <h1 class="text-5xl md:text-6xl font-bold text-white mb-4 drop-shadow-lg">
        Brisqueometer
    </h1>
    <p class="text-xl text-white/90 drop-shadow">
        Upload an image to assess its quality using the BRISQUE algorithm
    </p>
</div>

<div class="flex justify-center">
    <div class="w-full max-w-2xl">
        <div class="bg-white rounded-3xl shadow-2xl p-8 md:p-10 transform hover:scale-[1.02] transition-transform duration-300">
            <h5 class="text-2xl font-bold text-gray-800 mb-6">Upload Image</h5>
            
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="bg-red-50 border-l-4 border-red-500 text-red-700 p-4 rounded-lg mb-6" role="alert">
                    <ul class="list-disc list-inside space-y-1">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Upload" method="post" enctype="multipart/form-data" class="space-y-6">
                <div>
                    <label for="imageFile" class="block text-sm font-semibold text-gray-700 mb-2">
                        Select Image File
                    </label>
                    <input type="file" 
                           class="block w-full text-sm text-gray-700 
                                  file:mr-4 file:py-3 file:px-6
                                  file:rounded-xl file:border-0
                                  file:text-sm file:font-semibold
                                  file:bg-gradient-to-r file:from-purple-500 file:to-indigo-600
                                  file:text-white file:cursor-pointer
                                  hover:file:from-purple-600 hover:file:to-indigo-700
                                  file:transition-all file:duration-300
                                  border-2 border-gray-300 rounded-xl
                                  focus:border-primary focus:ring-2 focus:ring-primary/20
                                  cursor-pointer transition-all" 
                           id="imageFile" 
                           name="ImageFile" 
                           accept=".jpg,.jpeg,.png,.bmp"
                           required>
                    <p class="mt-2 text-sm text-gray-600">
                        Supported formats: JPG, JPEG, PNG, BMP (Max 10MB)
                    </p>
                </div>
                
                <div>
                    <button type="submit" 
                            class="w-full bg-gradient-to-r from-purple-600 to-indigo-600 
                                   text-white font-bold py-4 px-6 rounded-xl 
                                   hover:from-purple-700 hover:to-indigo-700
                                   transform hover:-translate-y-1 
                                   shadow-lg hover:shadow-2xl
                                   transition-all duration-300
                                   focus:outline-none focus:ring-4 focus:ring-purple-500/50">
                        Analyze Image Quality
                    </button>
                </div>
            </form>
        </div>

        <div class="mt-8 bg-white/10 backdrop-blur-lg rounded-2xl p-6 border border-white/20">
            <h5 class="text-xl font-bold text-white mb-3">About BRISQUE</h5>
            <p class="text-white/90 text-sm leading-relaxed">
                BRISQUE (Blind/Referenceless Image Spatial Quality Evaluator) is a no-reference 
                image quality assessment algorithm. It analyzes images without needing a reference 
                image and provides a quality score. Lower scores indicate better image quality.
            </p>
        </div>
    </div>
</div>
